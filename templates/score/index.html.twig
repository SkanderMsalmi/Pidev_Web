{% extends "base.html.twig" %}


{% block title %}Score
{% endblock %}

{% block body %}
	{% set score = score %}
	<div style="display: flex;align-items: center;justify-content: center;padding:150px">
		<div class="col-md-6 col-sm-6 highlight">
			<div>
				<div class="info-box card">

					{% if score < 3 %}
						<div>

							<span>
								<h2>Votre note est : {{ score }}/5
								</h2>
							</span>
							<h1 align="center"><i class="bi  bi-emoji-smile-upside-down" ></i></h1>
							<h4>
								""Trust yourself. You know more than you think you do.""
							</h4>
						</div>

					{% elseif score <5 %}
						<div>
							
							<h2>Votre note est :</h2>
							<h3 class="h-caption">{{ score }}/5</h3>
							<h1 align="center"><i class="bi bi-emoji-dizzy"></i></h1>
							<h4>
								""Today is your opportunity to build the tomorrow you want""
							</h4>
						</div>
					{% else %}
						<div>
							<i class="bi bi-emoji-heart-eyes"></i>
							<h2>Votre note est :</h2>
							<h3 class="h-caption">{{ score }}/5</h3>
							<h4>
								""Think big. Trust yourself and make it happen.""
							</h4>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>


</div>
<div style="display: flex;align-items: center;justify-content: center;padding:10px">
	<a class="btn btn-outline-info" href="{{ path('app_quiz_new') }}">Passer de nouveau</a>
	<span>
		<button style="display:none;" class="btn btn-outline-success" id="verifreponses">Verifier vos r√©ponses</button>
	</span>
	<span>
		<a class="btn btn-outline-dark" href={{ path('app_score_show',{'idscore': 10} )}}>Go to Home</a>
	</span>
</div>

<script>
	let togg1 = document.getElementById("verifreponses");
let d1 = document.getElementById("reponses");
togg1.addEventListener("click", () => {
if (getComputedStyle(d1).display != "none") {
d1.style.display = "none";
reponses.innerHtml = "Afficher reponses";

} else {
d1.style.display = "block";
reponses.innerHtml = "Masquer reponses";
}
})
</script>{% endblock %}
