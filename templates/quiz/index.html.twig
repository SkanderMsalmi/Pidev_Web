{% extends 'base.html.twig' %}

{% block title %}Quiz list{% endblock %}

{% block body %}


<div style="display: flex;align-items: center;justify-content: center;padding:150px">
   <div>
       <h1 class="card-title">Liste des Questions</h1>
        <div style="display: flex;align-items: right;justify-content: right;">       
		<a class="btn btn-success" href="{{ path('app_quiz_new') }}">Ajouter Question </a></div>
    <table class="table">
        <thead>
            <tr>
                <th>Idquiz</th>
                <th>Domaine</th>
                <th>Datecreation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quiz in quizzes %}
            <tr>
                <td>{{ quiz.idquiz }}</td>
                <td>{{ quiz.domaine }}</td>
                <td>{{ quiz.datecreation ? quiz.datecreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_quiz_show', {'idquiz': quiz.idquiz}) }}">Afficher</a>
                    <a class="btn btn-secondary" href="{{ path('app_quiz_edit', {'idquiz': quiz.idquiz}) }}">Modifer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
         </div>


    </div>
    			 <div class="d-flex justify-content-center">
		 {% do quizzes.setPageRange(2) %}
		 {{ knp_pagination_render (quizzes ,'pagination.html.twig') }}
		 </div>
{% endblock %}
