{% extends 'baseAdmin.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}


    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <br>
    <br>
    <br>
    <br>
    <div class="example-wrapper">
<table class="table table-striped">


    <thread>
            <th>Description</th>
            <th>Titre</th>
            <th>Type</th>
            <th>Domaine</th>
            <th>Prix</th>
            <th>Datedebut</th>
            <th>Datefin</th>

        </thread>
        <tbody>

        {% for formation in f %}
            <tr>
                <td>{{ formation.description }}</td>
                <td>{{ formation.titre }}</td>
                <td>{{ formation.type }}</td>
                <td>{{ formation.domaine }}</td>
                <td>{{ formation.prix }}</td>
                <td>{{ formation.datedebut ? formation.datedebut|date('Y-m-d') : '' }}</td>
                <td>{{ formation.datefin ? formation.datefin|date('Y-m-d') : '' }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('editformation', {'idFormation': formation.idformation}) }}">Modifier</a>
                </td>
                <td>
                    <a class="btn btn-danger" href="{{ path('deleteformation', {'idFormation': formation.idformation}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('newformation') }}">Creer une nouvelle formation</a>
    <div class="pagination">
        {{ knp_pagination_render(f) }}
    </div>
{% endblock %}