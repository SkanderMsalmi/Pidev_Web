{% extends 'baseAdmin.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
        <div class="row">
            <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Ajouter une formation</h5>

                        <!-- General Form Elements -->
                        {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-5 col-form-label">description</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.description,{'attr':{'class':'form-control'}}) }}

                            {{ form_errors(f.description,{'attr':{'class':'form-danger'}}) }}

                        </div>

                        <label for="inputText" class="col-sm-5 col-form-label">titre</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.titre,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.titre,{'attr':{'class':'form-danger'}}) }}

                        </div>

                        <label for="inputText" class="col-sm-5 col-form-label">type</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.type,{'attr':{'class':'form-danger'}}) }}

                        </div>

                        <label for="inputText" class="col-sm-5 col-form-label">domaine</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.domaine,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.domaine,{'attr':{'class':'form-danger'}}) }}

                        </div>

                        <label for="inputText" class="col-sm-5 col-form-label">prix</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.prix,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.prix,{'attr':{'class':'form-danger'}}) }}

                        </div>

                        <label for="inputText" class="col-sm-5 col-form-label">dateDebut</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.datedebut,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.datedebut,{'attr':{'class':'form-danger'}}) }}

                        </div>

                        <label for="inputText" class="col-sm-5 col-form-label">dateFin</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.datefin,{'attr':{'class':'form-control'}}) }}
                            {{ form_errors(f.datefin,{'attr':{'class':'form-danger'}}) }}

                        </div>


                        <br/>
                        <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                            {{ form_widget(f.Ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                        </div>

                        {{ form_end(f) }}

                        <a href="{{ 'formation' }}" class="text-body"><i class="fas fa-long-arrow-alt-left me-2"></i>Retour Ã  la liste des formations</a>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
