{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}






    <div class="example-wrapper">


        {% for message in app.flashes('success')%}
            <div class="alert alert-success">

                {{ message }}
            </div>
        {% endfor %}

        <div style="display:flex; width:max-content;">

        {% for formation in f %}
    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
    <div class="service-item text-cener pt-3">
    <div class="p-4" style="padding: 2px">

            <div class="col"> <div class="card h-100 shadow-sm">
                    <div class="card-body"> <div class="clearfix mb-3">
                            <span class="float-start badge rounded-pill bg-primary">Domaine : {{ formation.domaine }}</span>
                            <br>
                            <div style="align-content: center">
                            <span class="float-end price-hp">Titre :{{formation.titre}}</span>
                            <br>
                            <span class="float-end price-hp">Description :{{formation.description}}</span>
                            <span class="float-end price-hp">Type :{{formation.type}}</span>
                            </div>
                        </div>
                        <div class="text-center my-4"> <a href ="{{ path ('newreservation')}}"class="btn btn-outline-info">Reserver</a>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </div>
    </div>
        {% endfor %}
        </div>


        {#        <a href="{{ path('newformation') }}">Creer une nouvelle formation</a>#}



	<main class="d-flex justify-content-center">
		{% do f.setPageRange(2) %}
		{{ knp_pagination_render (f ,'pagination.html.twig') }}
	</main>



        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>






    </div>


{% endblock %}