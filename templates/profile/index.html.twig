                <div class="card" data-aos="fade-up" data-aos-offset="10">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="card-body">
                                <div class="h4 mt-0 title">About</div>
                                <p>{{ app.user.infos }}</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
